<div class="container">
    <div class="row vh-100">
        <div class="col-md-4 col-6 bg-dark m-auto py-5">
            <h1 class="text-center text-only font-weight-bold mb-3">LOGIN</h1>
             <%= form_for(:session, url: login_path, :html => {:class => 'text-uppercase text-only font-weight-bold'}) do |f| %>
                        <%= f.label :email, class: "text-uppercase text-only font-weight-bold" %>
                        <%= f.email_field :email, class: 'form-control' %>

                        <%= f.label :password %>
                        <%= f.password_field :password, class: 'form-control' %>
                        <br>
                        <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
            <% end %>
          
            <p class="m-0 mt-2 text-center">
                <a class="text-uppercase text-lightpurple text-decoration-none font-weight-bold"
                    href="#">
                    Back
                </a>
            </p>
        </div>
    </div>
</div>